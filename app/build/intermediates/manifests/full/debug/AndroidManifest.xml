<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.com.work.shimonaj.helpdx"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="23" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />

    <!-- Permissions required by the sync adapter -->
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="app.com.work.shimonaj.helpdx.LoginPageActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- <activity -->
        <!-- android:name=".LoginActivity" -->
        <!-- android:label="@string/app_name"> -->
        <!-- <intent-filter> -->
        <!-- <action android:name="android.intent.action.MAIN" /> -->


        <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
        <!-- </intent-filter> -->
        <!-- </activity> -->
        <activity
            android:name="app.com.work.shimonaj.helpdx.MainActivity"
            android:label="HelpDx - View Tickets"
            android:parentActivityName="app.com.work.shimonaj.helpdx.LoginPageActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.com.work.shimonaj.helpdx.LoginPageActivity" />
        </activity>

        <service
            android:name="app.com.work.shimonaj.helpdx.data.UpdaterService"
            android:exported="false" />

        <provider
            android:name="app.com.work.shimonaj.helpdx.data.ItemsProvider"
            android:authorities="com.example.helpdx"
            android:exported="false" />

        <activity
            android:name="app.com.work.shimonaj.helpdx.TicketDetailActivity"
            android:label="@string/title_ticket_detail"
            android:parentActivityName="app.com.work.shimonaj.helpdx.MainActivity"
            android:theme="@style/TicketDetailTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.com.work.shimonaj.helpdx.MainActivity" />
        </activity>
        <activity
            android:name="app.com.work.shimonaj.helpdx.ReplyActivity"
            android:label="@string/title_reply"
            android:parentActivityName="app.com.work.shimonaj.helpdx.TicketDetailActivity"
            android:theme="@style/ReplyTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.com.work.shimonaj.helpdx.TicketDetailActivity" />
        </activity>
        <activity
            android:name="app.com.work.shimonaj.helpdx.CreateTicketActivity"
            android:label="@string/title_activity_create_ticket"
            android:parentActivityName="app.com.work.shimonaj.helpdx.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.com.work.shimonaj.helpdx.MainActivity" />
        </activity>

        <receiver
            android:name="app.com.work.shimonaj.helpdx.widget.DetailWidgetProvider"
            android:enabled="true"
            android:label="@string/recent_tckets" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="helpdesk.ACTION_DATA_UPDATED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info_detail" />
        </receiver>

        <service
            android:name="app.com.work.shimonaj.helpdx.sync.TicketSyncService"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>
        <service
            android:name="app.com.work.shimonaj.helpdx.widget.DetailWidgetRemoteViewService"
            android:enabled="true"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>

</manifest>